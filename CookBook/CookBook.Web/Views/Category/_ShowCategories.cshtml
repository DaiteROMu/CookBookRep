@model IEnumerable<ShortCategoryViewModel>

<p>
    <a href="#" onclick="AddOrEditCategoryFunction(0)">
        Create
    </a>
</p>
<table class="show-list-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParentName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentName)
            </td>
            <td>
                <a href="#" onclick="AddOrEditCategoryFunction(@item.CategoryId)">
                    Edit
                </a>
                |
                <a href="#" onclick="DeleteCategoryFunction(@item.CategoryId)">
                    Delete
                </a>
            </td>
        </tr>
    }

</table>