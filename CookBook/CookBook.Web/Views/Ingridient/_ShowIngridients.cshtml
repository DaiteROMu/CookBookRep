@model IEnumerable<IngridientViewModel>

<p>
    <a href="#" onclick="AddOrEditIngridientFunction(0)">
        Create
    </a>
</p>
<table class="show-list-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a href="#" onclick="AddOrEditIngridientFunction(@item.IngridientId)">
                    Edit
                </a>
                |
                <a href="#" onclick="DeleteIngridientFunction(@item.IngridientId)">
                    Delete
                </a>                
            </td>
        </tr>
    }

</table>